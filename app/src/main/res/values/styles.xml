<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="MyChipHeaderStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_alignParentStart">true</item>
        <item name="android:layout_marginStart">10dp</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:background">@drawable/view_curved_bg</item>
        <item name="android:backgroundTint">?attr/colorPrimary</item>
        <item name="android:fontFamily">@font/inter_medium</item>
        <item name="android:textSize">12sp</item>
        <item name="android:paddingStart">15dp</item>
        <item name="android:paddingTop">7dp</item>
        <item name="android:paddingEnd">15dp</item>
        <item name="android:paddingBottom">7dp</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="MyChipStyle" parent="@style/Widget.Material3.Chip.Filter">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="fontFamily">@font/inter_regular</item>
        <item name="chipStrokeWidth">0dp</item>
        <item name="chipCornerRadius">15dp</item>
    </style>
</resources>